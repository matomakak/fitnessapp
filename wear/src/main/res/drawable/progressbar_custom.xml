<rotate xmlns:android="http://schemas.android.com/apk/res/android"
  android:duration="1000"
  android:fromDegrees="0"
  android:pivotX="50%"
  android:pivotY="50%"
  android:toDegrees="360">

  <shape
    android:innerRadius="33dp"
    android:shape="ring"
    android:thickness="14dp"
    android:useLevel="false">
    <size
      android:height="96dp"
      android:width="96dp"/>

    <gradient
      android:centerColor="#2a5ead"
      android:centerY="0.5"
      android:endColor="#2a2ead"
      android:startColor="#002aa9ad"
      android:type="sweep"
      android:useLevel="false"/>
  </shape>

</rotate>